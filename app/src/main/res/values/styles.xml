<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="SplashTheme" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="windowActionBar">false</item>//取消Actionbar
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>//设置全拼
        <item name="android:windowBackground">@drawable/img_splash</item>//设置背景
    </style>

    <style name="radio_button_title" parent="wrap_wrap">
        <item name="android:button">@drawable/radio_bg</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:drawablePadding">@dimen/margin_small</item>
    </style>

    <style name="text_set_title" parent="wrap_wrap">
        <item name="android:textSize">@dimen/text_size_middle</item>
        <item name="android:textColor">@color/gray_2</item>
    </style>

    <style name="edit_text_title" parent="match_wrap">
        <item name="android:background">@drawable/bg_content_edittext</item>
        <item name="android:padding">@dimen/margin_middle</item>
        <item name="android:textColor">@color/text_content</item>
    </style>

    <style name="text_title_150" parent="wrap_wrap">
        <item name="android:background">@drawable/bg_content_edittext</item>
        <item name="android:padding">@dimen/margin_middle</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:layout_width">@dimen/width_150</item>
    </style>


    <style name="edit_text_title_we1" parent="edit_text_title">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ll_vertical_white" parent="ll_vertical_match_wrap">
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginTop">@dimen/margin_huge</item>
        <item name="android:paddingBottom">@dimen/margin_huge</item>
    </style>

    <style name="rl_set_button" parent="match_wrap">
        <item name="android:layout_weight">3</item>
        <item name="android:layout_marginLeft">@dimen/margin_huge</item>
    </style>

    <style name="btn_set_style" parent="wrap_wrap">
        <item name="android:background">@drawable/bg_basicset_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/margin_middle</item>
        <item name="android:paddingBottom">@dimen/margin_middle</item>
        <item name="android:paddingRight">@dimen/margin_huge</item>
        <item name="android:paddingLeft">@dimen/margin_huge</item>
    </style>

    <style name="spinner_text_bg" parent="match_wrap">
        <item name="android:background">@drawable/spinner_text_bg</item>
        <item name="android:padding">@dimen/margin_middle</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="spinner_text_bg_we1" parent="spinner_text_bg">
        <item name="android:layout_weight">1</item>
    </style>


    <style name="ll_update_white">
        <item name="android:layout_marginTop">@dimen/padding_6</item>
        <item name="android:layout_marginBottom">@dimen/padding_6</item>
        <item name="android:layout_marginLeft">@dimen/padding_12</item>
        <item name="android:layout_marginRight">@dimen/padding_12</item>
        <item name="android:layout_height">@dimen/update_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/padding_5</item>
    </style>

    <style name="ll_selimg_white" parent="ll_update_white">
        <item name="android:layout_height">@dimen/qb_px_170</item>
    </style>
    <style name="ll_info_white" parent="ll_update_white">
        <item name="android:layout_height">@dimen/qb_px_170</item>
    </style>

    <style name="img_select" parent="match_wrap">
        <item name="android:layout_height">@dimen/img_height</item>
        <item name="android:src">@drawable/add_light</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
