<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_page">


    <TextView
        style="@style/text_large_black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_top"
        android:drawableLeft="@mipmap/icon_login"
        android:drawablePadding="@dimen/padding_huge"
        android:text="@string/wel_rtu_cloud" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top"
        android:orientation="vertical">

        <LinearLayout style="@style/ll_vertical_match_wrap">

            <EditText
                android:id="@+id/name_edit"
                style="@style/edit_login_text_bg"
                android:hint="@string/input_phone" />

            <View style="@style/divider_horizontal_gray" />

        </LinearLayout>

        <LinearLayout style="@style/ll_vertical_match_wrap">

            <EditText
                android:id="@+id/pass_edit"
                style="@style/edit_login_text_bg"
                android:inputType="textPassword"
                android:hint="@string/input_password" />

            <View style="@style/divider_horizontal_gray" />

        </LinearLayout>


        <Button
            android:id="@+id/login"
            style="@style/btn_blue_middle"
            android:layout_marginLeft="@dimen/qb_px_20"
            android:layout_marginTop="@dimen/qb_px_20"
            android:layout_marginRight="@dimen/qb_px_20"
            android:text="@string/login" />

        <RelativeLayout
            style="@style/match_wrap"
            android:layout_margin="@dimen/qb_px_20">

            <TextView
                style="@style/text_middle_blue"
                android:text="忘记密码"
                android:visibility="gone" />

            <TextView
                android:id="@+id/register_text"
                style="@style/text_middle_blue"
                android:layout_alignParentRight="true"
                android:text="@string/User_registration" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>