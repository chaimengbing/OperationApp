<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_page">

    <include layout="@layout/toolbar_layout" />

    <LinearLayout
        android:id="@+id/tab_layout"
        style="@style/ll_horizontal_match_wrap"
        android:layout_height="@dimen/qb_px_50"
        android:layout_below="@id/toolbar_rl"
        android:minHeight="@dimen/qb_px_50">

        <RelativeLayout
            style="@style/match_wrap"
            android:layout_weight="1">

            <TextView
                android:id="@+id/left_text"
                style="@style/text_black_to_blue"
                android:layout_centerInParent="true"
                android:text="报警信息" />

            <View
                android:id="@+id/left_divider"
                style="@style/divider_horizontal_3dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout
            style="@style/match_wrap"
            android:layout_weight="1">


            <TextView
                android:id="@+id/center_text"
                style="@style/text_black_to_blue"
                android:layout_centerInParent="true"
                android:text="工单信息" />

            <View
                android:id="@+id/center_divider"
                style="@style/divider_horizontal_3dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            style="@style/match_wrap"
            android:layout_weight="1">


            <TextView
                android:id="@+id/right_text"
                style="@style/text_black_to_blue"
                android:layout_centerInParent="true"
                android:text="评价信息" />

            <View
                android:id="@+id/right_divider"
                style="@style/divider_horizontal_3dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone" />

        </RelativeLayout>


    </LinearLayout>

    <View
        android:id="@+id/divider"
        style="@style/divider_horizontal_1dp_gray"
        android:layout_below="@id/tab_layout" />

    <ListView
        android:id="@+id/message_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#00000000">

    </ListView>

</LinearLayout>