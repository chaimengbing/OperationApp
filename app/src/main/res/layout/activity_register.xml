<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_page">


    <TextView
        style="@style/text_large_black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_top"
        android:drawableLeft="@mipmap/icon_login"
        android:drawablePadding="@dimen/padding_huge"
        android:text="@string/wel_rtu_cloud" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_top"
        android:orientation="vertical">

        <LinearLayout style="@style/ll_vertical_match_wrap">

            <EditText
                android:id="@+id/phone_edit"
                style="@style/edit_login_text_bg"
                android:hint="@string/input_phone" />

            <View style="@style/divider_horizontal_gray" />

        </LinearLayout>

        <LinearLayout style="@style/ll_vertical_match_wrap">

            <EditText
                android:id="@+id/pass_edit"
                style="@style/edit_login_text_bg"
                android:hint="@string/cofirm_password"
                android:inputType="textPassword" />

            <View style="@style/divider_horizontal_gray" />

        </LinearLayout>

        <LinearLayout
            style="@style/ll_vertical_match_wrap"
            android:visibility="gone">

            <EditText
                android:id="@+id/cofirm_pass_edit"
                style="@style/edit_login_text_bg"
                android:hint="@string/cofirm_password"
                android:inputType="textPassword" />

            <View style="@style/divider_horizontal_gray" />

        </LinearLayout>


        <TextView
            style="@style/text_middle"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="@dimen/padding_16"
            android:text="@string/info_des"
            android:textColor="@color/edit_text_gray" />

        <LinearLayout style="@style/ll_vertical_match_wrap">

            <EditText
                android:id="@+id/info_des_edit"
                style="@style/edit_login_text_bg_60" />

            <View style="@style/divider_horizontal_gray" />

        </LinearLayout>

        <LinearLayout
            style="@style/ll_horizontal_match_wrap"
            android:gravity="bottom">

            <LinearLayout
                style="@style/ll_vertical_match_wrap"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/check_code_edit"
                    style="@style/edit_login_text_bg"
                    android:hint="@string/please_input_check_code" />

                <View style="@style/divider_horizontal_gray" />

            </LinearLayout>

            <ImageView
                android:id="@+id/check_code_image"
                style="@style/match_match"
                android:layout_gravity="bottom"
                android:layout_marginRight="30dp"
                android:layout_weight="2"
                android:gravity="bottom" />


        </LinearLayout>


        <Button
            android:id="@+id/register"
            style="@style/btn_blue_middle"
            android:layout_margin="@dimen/padding_large"
            android:text="@string/register" />

    </LinearLayout>


</LinearLayout>