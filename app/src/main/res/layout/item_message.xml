<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f4f4f4"
    android:orientation="vertical">


    <TextView
        android:id="@+id/time_textview"
        android:layout_width="@dimen/qb_px_200"
        android:layout_height="@dimen/qb_px_20"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/qb_px_30"
        android:background="@mipmap/hui_back"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="10sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_120"
        android:layout_margin="@dimen/qb_px_15"
        android:background="@drawable/bai_back"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_15"
            android:layout_marginTop="@dimen/qb_px_15"
            android:text="VControl"
            android:textColor="#323232"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_15"
            android:layout_marginTop="@dimen/qb_px_10"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#323232"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_15"
            android:layout_marginTop="@dimen/qb_px_7"
            android:text="点击查看全文"
            android:textColor="#959494"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>